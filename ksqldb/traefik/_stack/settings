#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS="hkvb/confluent_ksqldb"
export VCW_STACK_GLOBAL_STACKNAMES="ksqldb"
export VCW_STACK_GLOBAL_BOOTSTACKS=""
export VCW_STACK_GLOBAL_RUNSTACKS="ksqldb"
export VCW_STACK_GLOBAL_VOLUME_LIST="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_queries_volume"
export VCW_STACK_GLOBAL_VOLUME_INITIALISED="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_queries_volume:/vcw/queries"
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCW_STACK_GLOBAL='\
$VCW_STACK_GLOBAL_SERVICE_NAME,\
$VCW_STACK_GLOBAL_IMAGE_NAME,\
$VCW_STACK_KSQLDB_ENVIRONMENT,\
$VCW_STACK_KSQLDB_COMMAND,\
$VCW_STACK_KSQLDB_PORTS,\
$VCW_STACK_KSQLDB_VOLUMES,\
$VCW_STACK_KSQLDB_NETWORKS,\
$VCW_STACK_KSQLDB_DEPLOY_MODE,\
$VCW_STACK_KSQLDB_COMPOSE_EXTENSIONS,\
$VCW_STACK_GLOBAL_VOLUMES,\
$VCW_STACK_GLOBAL_NETWORKS'
export VCW_STACK_GLOBAL_SERVICE_NAME="ksqldb"
export VCW_STACK_GLOBAL_IMAGE_NAME="confluentinc/cp-ksqldb-server"
export VCW_STACK_KSQLDB_ENVIRONMENT="\
'KSQL_CONFIG_DIR=/etc/ksql', \
'KSQL_BOOTSTRAP_SERVERS=${DOLLAR}{CONFIGURATION_MODULE_KSQLDB_ENVIRONMENT_BOOTSTRAP_SERVERS}',\
'KSQL_HOST_NAME=${DOLLAR}{CONFIGURATION_MODULE_KSQLDB_ENVIRONMENT_KSQL_HOST_NAME}', \
'KSQL_CACHE_MAX_BYTES_BUFFERING=0', \
'KSQL_KSQL_LOGGING_PROCESSING_STREAM_AUTO_CREATE=true',\
'KSQL_KSQL_LOGGING_PROCESSING_TOPIC_REPLICATION_FACTOR=1',\
'KSQL_KSQL_LOGGING_PROCESSING_TOPIC_AUTO_CREATE=true',\
'KSQL_KSQL_SERVICE_ID=${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_'\
${DOLLAR}{CONFIGURATION_MODULE_KSQLDB_ENVIRONMENT_EXTRA}"
export VCW_STACK_KSQLDB_COMMAND=
export VCW_STACK_KSQLDB_PORTS=
export VCW_STACK_KSQLDB_VOLUMES="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_queries_volume:/vcw/queries"
export VCW_STACK_KSQLDB_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKGLOBAL}_overlay, ${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay"
export VCW_STACK_KSQLDB_DEPLOY_MODE="replicated"
export VCW_STACK_KSQLDB_COMPOSE_EXTENSIONS="
      labels: [traefik.enable=true,traefik.docker.network=${DOLLAR}{VCW_STACK_GLOBAL_NETWORKGLOBAL}_overlay,
      \"traefik.http.middlewares.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_ksqldb.stripprefix.prefixes=/${DOLLAR}{VCW_STACK_GLOBAL_URLPREFIX},/${DOLLAR}{VCW_STACK_GLOBAL_URLPREFIX}\",
      traefik.http.services.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_ksqldb.loadbalancer.server.port=8088,
      traefik.http.routers.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_ksqldb.middlewares=${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_ksqldb@docker,
      traefik.http.routers.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_ksqldb.entrypoints=infometis,
      traefik.http.routers.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_ksqldb.rule=PathPrefix(\"/${DOLLAR}{VCW_STACK_GLOBAL_URLPREFIX}\")]
${DOLLAR}{VCW_STACK_KSQLDB_COMPOSE_EXTENSIONS}"
export VCW_STACK_GLOBAL_VOLUMES="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_queries_volume: { external: true }"
export VCW_STACK_GLOBAL_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKGLOBAL}_overlay: { external: true }, ${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START MODULE SETTINGS
# END MODULE SETTINGS

# START SETTINGS ksql_server.base
export VCW_STACK_KSQLDB_DEPLOY_RESOURCES_LIMITS_MEMORY="${CONFIGURATION_MODULE_KSQLDB_MEMORY_LIMIT}"
export VCW_STACK_KSQLDB_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="${CONFIGURATION_MODULE_KSQLDB_MEMORY_RESERVED}"
# END SETTINGS ksql_server.base
