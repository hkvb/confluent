#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS="hkvb/confluent_ksqldb/cli"
export VCW_STACK_GLOBAL_STACKNAMES="ksqldb_cli"
export VCW_STACK_GLOBAL_BOOTSTACKS=""
export VCW_STACK_GLOBAL_RUNSTACKS="ksqldb_cli"
export VCW_STACK_GLOBAL_VOLUME_LIST=""
export VCW_STACK_GLOBAL_VOLUME_INITIALISED=""
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCW_STACK_GLOBAL='\
$VCW_STACK_GLOBAL_SERVICE_NAME,\
$VCW_STACK_GLOBAL_IMAGE_NAME,\
$VCW_STACK_KSQLDB_CLI_ENVIRONMENT,\
$VCW_STACK_KSQLDB_CLI_COMMAND,\
$VCW_STACK_KSQLDB_CLI_PORTS,\
$VCW_STACK_KSQLDB_CLI_VOLUMES,\
$VCW_STACK_KSQLDB_CLI_NETWORKS,\
$VCW_STACK_KSQLDB_CLI_DEPLOY_MODE,\
$VCW_STACK_GLOBAL_VOLUMES,\
$VCW_STACK_GLOBAL_NETWORKS'
export VCW_STACK_GLOBAL_SERVICE_NAME="ksqldb_cli"
export VCW_STACK_GLOBAL_IMAGE_NAME="confluentinc/cp-ksqldb-cli"
export VCW_STACK_KSQLDB_CLI_ENVIRONMENT=
export VCW_STACK_KSQLDB_CLI_COMMAND=
export VCW_STACK_KSQLDB_CLI_PORTS=
export VCW_STACK_KSQLDB_CLI_VOLUMES=
export VCW_STACK_KSQLDB_CLI_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay"
export VCW_STACK_KSQLDB_CLI_DEPLOY_MODE="replicated"
export VCW_STACK_GLOBAL_VOLUMES=
export VCW_STACK_GLOBAL_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS ksqldb_server.base
export VCW_STACK_KSQLDB_CLI_DEPLOY_RESOURCES_LIMITS_MEMORY="${CONFIGURATION_MODULE_KSQLDB_CLI_MEMORY_LIMIT}"
export VCW_STACK_KSQLDB_CLI_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="${CONFIGURATION_MODULE_KSQLDB_CLI_MEMORY_RESERVED}"
# END SETTINGS ksqldb_server.base

# START TOPLEVEL SETTINGS
export VCW_STACK_GLOBAL_VOLUMES=
# END TOPLEVEL SETTINGS
