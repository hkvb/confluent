#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS="hkvb/confluent/controlcenter80"
export VCW_STACK_GLOBAL_STACKNAMES="controlcenter80"
export VCW_STACK_GLOBAL_BOOTSTACKS="controlcenter80"
export VCW_STACK_GLOBAL_RUNSTACKS=""
export VCW_STACK_GLOBAL_VOLUME_LIST=""
export VCW_STACK_GLOBAL_VOLUME_INITIALISED=""
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCW_STACK_GLOBAL='\
$VCW_STACK_GLOBAL_SERVICE_NAME,\
$VCW_STACK_GLOBAL_IMAGE_NAME,\
$VCW_STACK_CONTROLCENTER80_ENVIRONMENT,\
$VCW_STACK_CONTROLCENTER80_COMMAND,\
$VCW_STACK_CONTROLCENTER80_PORTS,\
$VCW_STACK_CONTROLCENTER80_VOLUMES,\
$VCW_STACK_CONTROLCENTER80_NETWORKS,\
$VCW_STACK_CONTROLCENTER80_DEPLOY_MODE,\
$VCW_STACK_CONTROLCENTER80_COMPOSE_EXTENSIONS,\
$VCW_STACK_GLOBAL_VOLUMES,\
$VCW_STACK_GLOBAL_NETWORKS'
export VCW_STACK_GLOBAL_SERVICE_NAME="controlcenter80"
export VCW_STACK_GLOBAL_IMAGE_NAME="confluentinc/cp-enterprise-control-center"
export VCW_STACK_CONTROLCENTER80_ENVIRONMENT="\
'CONTROL_CENTER_BOOTSTRAP_SERVERS=kafka:9092',\
'CONFLUENT_CONTROLCENTER_ID=${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}', \
'CONTROL_CENTER_REPLICATION_FACTOR=1',\
'CONTROL_CENTER_INTERNAL_TOPICS_PARTITIONS=1',\
'CONTROL_CENTER_MONITORING_INTERCEPTOR_TOPIC_PARTITIONS=1',\
'CONFLUENT_METRICS_TOPIC_REPLICATION=1' \
${DOLLAR}{VCW_STACK_CONTROLCENTER80_ENVIRONMENT_EXTRA}"
export VCW_STACK_CONTROLCENTER80_COMMAND=
export VCW_STACK_CONTROLCENTER80_PORTS=
export VCW_STACK_CONTROLCENTER80_VOLUMES=
export VCW_STACK_CONTROLCENTER80_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKGLOBAL}_overlay, ${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay"
export VCW_STACK_CONTROLCENTER80_DEPLOY_MODE="replicated"
export VCW_STACK_CONTROLCENTER80_COMPOSE_EXTENSIONS="
      labels: [traefik.enable=true,traefik.docker.network=${DOLLAR}{VCW_STACK_GLOBAL_NETWORKGLOBAL}_overlay,
      traefik.http.services.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_controlcenter80.loadbalancer.server.port=9021,
      traefik.http.routers.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_controlcenter80.entrypoints=infometis,
      traefik.http.routers.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_controlcenter80.rule=PathPrefix(\"/\")]
${DOLLAR}{VCW_STACK_CONTROLCENTER80_COMPOSE_EXTENSIONS}"
export VCW_STACK_GLOBAL_VOLUMES=
export VCW_STACK_GLOBAL_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKGLOBAL}_overlay: { external: true }, ${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS CONTROLCENTER80.base
export VCW_STACK_CONTROLCENTER80_ENVIRONMENT_EXTRA="${CONFIGURATION_MODULE_CONTROLCENTER80_ENVIRONMENT_EXTRA}"
export VCW_STACK_CONTROLCENTER80_DEPLOY_RESOURCES_LIMITS_MEMORY="${CONFIGURATION_MODULE_CONTROLCENTER80_MEMORY_LIMIT}"
export VCW_STACK_CONTROLCENTER80_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="${CONFIGURATION_MODULE_CONTROLCENTER80_MEMORY_RESERVED}"
# END SETTINGS CONTROLCENTER80.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
