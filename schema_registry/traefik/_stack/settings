#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS="hkvb/confluent/schema_registry"
export VCW_STACK_GLOBAL_STACKNAMES="schema_registry"
export VCW_STACK_GLOBAL_BOOTSTACKS="schema_registry"
export VCW_STACK_GLOBAL_RUNSTACKS=""
export VCW_STACK_GLOBAL_VOLUME_LIST="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_secrets_volume"
export VCW_STACK_GLOBAL_VOLUME_INITIALISED=""
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCW_STACK_GLOBAL='\
$VCW_STACK_GLOBAL_SERVICE_NAME,\
$VCW_STACK_GLOBAL_IMAGE_NAME,\
$VCW_STACK_SCHEMA_REGISTRY_ENVIRONMENT,\
$VCW_STACK_SCHEMA_REGISTRY_COMMAND,\
$VCW_STACK_SCHEMA_REGISTRY_PORTS,\
$VCW_STACK_SCHEMA_REGISTRY_VOLUMES,\
$VCW_STACK_SCHEMA_REGISTRY_NETWORKS,\
$VCW_STACK_SCHEMA_REGISTRY_DEPLOY_MODE,\
$VCW_STACK_SCHEMA_REGISTRY_COMPOSE_EXTENSIONS,\
$VCW_STACK_GLOBAL_VOLUMES,\
$VCW_STACK_GLOBAL_NETWORKS'
export VCW_STACK_GLOBAL_SERVICE_NAME="schema_registry"
export VCW_STACK_GLOBAL_IMAGE_NAME="confluentinc/cp-schema-registry"
export VCW_STACK_SCHEMA_REGISTRY_ENVIRONMENT="\
'SCHEMA_REGISTRY_HOST_NAME=${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}', \
'SCHEMA_REGISTRY_LISTENERS=http://0.0.0.0:8081', \
'SCHEMA_REGISTRY_KAFKASTORE_BOOTSTRAP_SERVERS=${DOLLAR}{VCW_STACK_SCHEMA_REGISTRY_ENVIRONMENT_KAFKASTORE_BOOTSTRAP_SERVERS}'\
${DOLLAR}{VCW_STACK_SCHEMA_REGISTRY_ENVIRONMENT_EXTRA}"
export VCW_STACK_SCHEMA_REGISTRY_COMMAND=
export VCW_STACK_SCHEMA_REGISTRY_PORTS="${CONFIGURATION_MODULE_SCHEMA_REGISTRY_PORT}:8081"
export VCW_STACK_SCHEMA_REGISTRY_VOLUMES="'${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_secrets_volume:/etc/schema-registry/secrets'"
export VCW_STACK_SCHEMA_REGISTRY_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKGLOBAL}_overlay, ${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay"
export VCW_STACK_SCHEMA_REGISTRY_DEPLOY_MODE="replicated"
export VCW_STACK_SCHEMA_REGISTRY_COMPOSE_EXTENSIONS="
      labels: [traefik.enable=true,traefik.docker.network=${DOLLAR}{VCW_STACK_GLOBAL_NETWORKGLOBAL}_overlay,
      \"traefik.http.middlewares.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_schema_registry.stripprefix.prefixes=/${DOLLAR}{VCW_STACK_GLOBAL_URLPREFIX},/${DOLLAR}{VCW_STACK_GLOBAL_URLPREFIX}/\",
      traefik.http.services.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_schema_registry.loadbalancer.server.port=8081,
      traefik.http.routers.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_schema_registry.middlewares=${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_schema_registry@docker,
      traefik.http.routers.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_schema_registry.entrypoints=infometis,
      traefik.http.routers.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_schema_registry.rule=PathPrefix(\"/${DOLLAR}{VCW_STACK_GLOBAL_URLPREFIX}\")]
${DOLLAR}{VCW_STACK_SCHEMA_REGISTRY_COMPOSE_EXTENSIONS}"
export VCW_STACK_GLOBAL_VOLUMES="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_secrets_volume: { external: true }"
export VCW_STACK_GLOBAL_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKGLOBAL}_overlay: { external: true }, ${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS schema_registry.base
export VCW_STACK_SCHEMA_REGISTRY_ENVIRONMENT_KAFKASTORE_BOOTSTRAP_SERVERS="${CONFIGURATION_MODULE_SCHEMA_REGISTRY_ENVIRONMENT_KAFKASTORE_BOOTSTRAP_SERVERS}"
export VCW_STACK_SCHEMA_REGISTRY_ENVIRONMENT_EXTRA="${CONFIGURATION_MODULE_SCHEMA_REGISTRY_ENVIRONMENT_EXTRA}"
export VCW_STACK_SCHEMA_REGISTRY_DEPLOY_RESOURCES_LIMITS_MEMORY="${CONFIGURATION_MODULE_SCHEMA_REGISTRY_MEMORY_LIMIT}"
export VCW_STACK_SCHEMA_REGISTRY_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="${CONFIGURATION_MODULE_SCHEMA_REGISTRY_MEMORY_RESERVED}"
# END SETTINGS schema_registry.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
