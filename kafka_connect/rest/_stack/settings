#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS="hkvb/confluent/kafka_connect/rest"
export VCW_STACK_GLOBAL_STACKNAMES="rest"
export VCW_STACK_GLOBAL_BOOTSTACKS="rest"
export VCW_STACK_GLOBAL_RUNSTACKS="rest"
export VCW_STACK_GLOBAL_VOLUME_LIST="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_data_volume"
export VCW_STACK_GLOBAL_VOLUME_INITIALISED=""
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCW_STACK_GLOBAL='\
$VCW_STACK_GLOBAL_SERVICE_NAME,\
$VCW_STACK_GLOBAL_IMAGE_NAME,\
$VCW_STACK_REST_ENVIRONMENT,\
$VCW_STACK_REST_PORTS,COMMAND,\
$VCW_STACK_REST_NETWORKS,\
$VCW_STACK_REST_VOLUMES,\
$VCW_STACK_GLOBAL_VOLUMES,\
$VCW_STACK_GLOBAL_NETWORKS,\
$VCW_STACK_REST_COMPOSE_EXTENSIONS'
export VCW_STACK_GLOBAL_SERVICE_NAME="kafka_connect_rest"
export VCW_STACK_GLOBAL_IMAGE_NAME="hkvb/confluent.kafka_connect.rest"
export VCW_STACK_REST_ENVIRONMENT="\
'VCW_STACK_STATIC_REST_BASE_API_LOGGING=${DOLLAR}{VCW_STACK_REST_ENVIRONMENT_REST_BASE_CURL_LOGGING}',\
'VCW_STACK_REST_BASE_PROTOCOL=${DOLLAR}{VCW_STACK_REST_ENVIRONMENT_REST_KAFKA_CONNECT_PROTOCOL}',\
'VCW_STACK_REST_BASE_HOST=${DOLLAR}{VCW_STACK_REST_ENVIRONMENT_REST_KAFKA_CONNECT_HOST}',\
'VCW_STACK_REST_BASE_PORT=${DOLLAR}{VCW_STACK_REST_ENVIRONMENT_REST_KAFKA_CONNECT_PORT}',\
'VCW_STACK_REST_BASE_URLPREFIX=${DOLLAR}{VCW_STACK_REST_ENVIRONMENT_REST_KAFKA_CONNECT_PREFIX}'"
export VCW_STACK_REST_PORTS=
export VCW_STACK_REST_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay"
export VCW_STACK_REST_VOLUMES="\
'${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_data_volume:/conteco/pwd'\
${DOLLAR}{VCW_STACK_REST_VOLUMES_MAPPINGS}"
export VCW_STACK_GLOBAL_VOLUMES="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_data_volume: { external: true }"
export VCW_STACK_GLOBAL_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay: { external: true }"
export VCW_STACK_REST_COMPOSE_EXTENSIONS="      restart_policy: { condition: none }
${DOLLAR}{VCW_STACK_REST_COMPOSE_EXTENSIONS}"
# END GLOBAL SETTINGS

# START SETTINGS artifactory.base
export VCW_STACK_REST_ENVIRONMENT_REST_BASE_CURL_LOGGING="${CONFIGURATION_MODULE_REST_ENVIRONMENT_REST_BASE_CURL_LOGGING}"
export VCW_STACK_REST_ENVIRONMENT_REST_KAFKA_CONNECT_PROTOCOL="${CONFIGURATION_MODULE_REST_ENVIRONMENT_REST_KAFKA_CONNECT_PROTOCOL}"
export VCW_STACK_REST_ENVIRONMENT_REST_KAFKA_CONNECT_HOST="${CONFIGURATION_MODULE_REST_ENVIRONMENT_REST_KAFKA_CONNECT_HOST}"
export VCW_STACK_REST_ENVIRONMENT_REST_KAFKA_CONNECT_PORT="${CONFIGURATION_MODULE_REST_ENVIRONMENT_REST_KAFKA_CONNECT_PORT}"
export VCW_STACK_REST_ENVIRONMENT_REST_KAFKA_CONNECT_PREFIX="${CONFIGURATION_MODULE_REST_ENVIRONMENT_REST_KAFKA_CONNECT_PREFIX}"
export VCW_STACK_REST_COMMAND="${CONFIGURATION_MODULE_REST_COMMAND}"
export VCW_STACK_REST_COMMAND_INTERACTIVE="${CONFIGURATION_MODULE_REST_COMMAND_INTERACTIVE}"
export VCW_STACK_REST_VOLUMES_MAPPINGS="${CONFIGURATION_MODULE_REST_VOLUMES_MAPPINGS}"
export VCW_STACK_REST_DEPLOY_MODE="${CONFIGURATION_MODULE_REST_DEPLOY_MODE}"
export VCW_STACK_REST_DEPLOY_RESOURCES_LIMITS_MEMORY="${CONFIGURATION_MODULE_REST_MEMORY_LIMIT}"
export VCW_STACK_REST_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="${CONFIGURATION_MODULE_REST_MEMORY_RESERVED}"
# END SETTINGS artifactory.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
